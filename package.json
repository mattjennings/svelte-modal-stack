{
  "name": "svelte-modals",
  "version": "2.0.0-beta.2",
  "svelte": "index.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "release": "npm run package && npm publish ./package --access public",
    "release:next": "npm run package && npm publish ./package --access public --tag next",
    "prepare": "ts-patch install -s",
    "test": "vitest"
  },
  "devDependencies": {
    "@mattjennings/heroicons-svelte": "^0.0.6",
    "@sveltejs/adapter-vercel": "1.0.0-next.66",
    "@sveltejs/kit": "next",
    "@sveltejs/package": "1.0.0-next.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.2",
    "canvas-confetti": "^1.4.0",
    "cssnano": "^5.0.15",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "fast-glob": "^3.2.11",
    "mdsvex": "^0.10.6",
    "mdsvexamples": "^0.3.1",
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark-abbr": "^1.4.1",
    "remark-github": "^10.1.0",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.14",
    "tailwindcss": "^3.0.0",
    "ts-patch": "^2.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "3.0.2",
    "vitest": "^0.22.1"
  },
  "type": "module",
  "keywords": [
    "svelte",
    "modal",
    "stack",
    "manager"
  ],
  "homepage": "https://svelte-modals.mattjennings.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattjennings/svelte-modals.git"
  },
  "license": "MIT",
  "author": {
    "name": "Matt Jennings",
    "url": "https://github.com/mattjennings"
  }
}
